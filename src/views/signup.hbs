<html lang="en" dir="ltr">

<head>
  <meta charset="UTF-8">
  <title>Registration</title>
  <script src="/static/js/modernizr.js"></script>

  <link rel="stylesheet" href="/static/css/style1.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
  <link rel="stylesheet" href="/static/css/base.css">
  <link rel="stylesheet" href="/static/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  {{>header}}


  <div class="container">
    <form action="/user/VerifySignup" method="post">
      <div class="title">Registration</div>
      <span class="details">Full Name</span>
      <div class="input-box underline">
        <input type="text" placeholder="Enter your name" name="name" required>
        <div class="underline"></div>
      </div>
      <span class="details">Username</span>
      <div class="input-box">
        <input type="text" placeholder="Enter your username" name="user" id="user" required>
        <div class="underline"></div>
      </div>
      <span class="details">Email</span>
      <div class="input-box">
        <input type="text" placeholder="Enter your email" name="email" id="email" required>
      <div class="underline"></div>
      </div>
      <span class="details">Password</span>
      <div class="input-box">
        <input type="text" placeholder="Enter your password" name="pass" id="pass" required>
      <div class="underline"></div>
      </div>
      <span class="details">Confirm Password</span>
      <div class="input-box">
        <input type="text" placeholder="Confirm your password" name="cpass" id="cpass" required>
      <div class="underline"></div>
      </div>
      <div class="input-box button">
        <input type="submit" name="" value="Continue">
      </div>
      <div>
        <p style="color: red; justify-content: center; display: flex; font-size: 1.2rem;">After registration contact to admin to verify
          your permission</p>
      </div>
    </form>
  </div>
{{>footer}}

<script src="/static/js/jquery-3.2.1.min.js"></script>
  <script src="/static/js/main.js"></script>
</body>

</html>